{
  "name": "eye-care-app",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "tsc && vite build",
    "dev": "npm-run-all --parallel vite dev:electron",
    "dev:electron": "tsc --watch & electron .",
    "vite": "vite",
    "test": "vitest --config ./src/renderer/vitest.config.ts",
    "deploy": "npm run build && cross-env NODE_ENV=production electron-builder --mac"
  },
  "build": {
    "appId": "com.example.eyecareapp",
    "extraResources": [
      ".env"
    ],
    "productName": "EyeRoutineEO",
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "build"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.healthcare-fitness"
    },
    "dmg": {
      "iconSize": 80,
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/auto-launch": "^5.0.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "electron": "^24.0.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "jsdom": "^25.0.0",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.5.1",
    "typescript": "^4.0.0",
    "vite": "^4.0.0",
    "vite-plugin-electron": "^0.28.7",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "auto-launch": "^5.0.6",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "postcss": "^8.4.41",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "tailwindcss": "^3.4.10"
  }
}
