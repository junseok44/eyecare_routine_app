{
  "compilerOptions": {
    "target": "ESNext", // 최신 ECMAScript 버전을 타겟
    "module": "ESNext", // ES 모듈 사용
    "strict": true, // 엄격한 타입 검사
    "esModuleInterop": true, // CommonJS와 ES 모듈 간의 호환성
    "skipLibCheck": true, // 라이브러리 타입 검사 건너뛰기
    "forceConsistentCasingInFileNames": true, // 대소문자 일관성 강제
    "outDir": "./dist", // 출력 디렉토리
    "jsx": "react-jsx", // React 17 이상의 자동 JSX 런타임 사용
    "moduleResolution": "node", // 노드 모듈 해석 방식
    "baseUrl": "./", // 기본 경로
    "paths": {
      "@/*": ["src/*"] // 경로 별칭 설정
    },
    "lib": ["dom", "dom.iterable", "esnext"] // 사용 라이브러리
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"], // 포함할 파일
  "exclude": ["node_modules", "dist"] // 제외할 파일
}
